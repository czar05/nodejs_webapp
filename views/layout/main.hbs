<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nodejs web App</title>
  
  <style>h1{
    color:darkturquoise;
    text-align: center;
    margin-top: 10px;
    background-color: chocolate;
  }
  h3{
    text-align: center;
    color: rgb(190, 40, 40);
  }
  .user{
    background-color: darkturquoise;
    height: 225px;
    width: 600px;
    position: absolute;
    left: 30%;
    border-radius: 30px;
  }
  .task{
     background-color: darkturquoise;
    height: 225px;
      width: 600px;
    position: absolute;
    top: 50%;
    left: 30%;
    border-radius: 30px;
  }
  #newuser{
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  #task{
     display: flex;
    flex-direction: column;
    justify-content: center;
  }
  #btn{
    font-size: large;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    color: white;
    text-align: center;
    position: absolute;
    left: 45%;
    margin-top: 15px;
    background-color: blue;
    border-radius: 20px;
    bottom: 40px;
  }
   #btn1{
    font-size: large;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    color: white;
    text-align: center;
    position: absolute;
    left: 45%;
    margin-top: 15px;
    background-color: blue;
    border-radius: 20px;
    bottom: 10px;
  }
  #use{
 font-size: large;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    color: white;
    text-align: center;
     background-color: blue;
    border-radius: 20px;
  }
  #add{
font-size: large;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    color: white;
    text-align: center;
     background-color: blue;
    border-radius: 20px;
  }
  input{
    background-color: rgb(45, 214, 81);
  }
  </style>
  </head>
  <body>
    <h1>Simple Nodejs WebApp</h1>

    <div class="user">
      <h3> create user here</h3>
      <form id="newuser" action="create-user" method="post">
        <input type="text" name="name" placeholder="Enter your name" required />
        <input
          type="email"
          name="email"
          placeholder="Enter your email"
          required
        />
        <input
          type="text"
          name="mobile"
          placeholder="Enter your phone"
          required
        />
        <button id="use" type="submit">create user</button>
      </form>
    </div>

    <div class="task">
      <h3>create task here</h3>
      <form id="task" action="create-task" method="post">
        <label for="user">Select The User :</label>
        <select name="user">
          {{#each selUsers}}
           <option>{{name}}</option>
          {{/each}}

        </select>
      
        <input type="text" name="task" placeholder="add task" required />
        <label for="status">Task Status :</label>
        <select name="status">
          <option value="pending">pending</option>
          <option value="done">done</option>
        </select>
        <button id="add" type="submit">add task</button>
      </form>
    </div>
    <form action="exportdata" method="post">
     <button id="btn" class="btn btn primary" type="submit">Export User To Excel</button>
   </form>
    <form action="exporttask" method="post">
     <button id="btn1" class="btn btn primary" type="submit">Export Task To Excel</button>
   </form>
  </body>
</html>